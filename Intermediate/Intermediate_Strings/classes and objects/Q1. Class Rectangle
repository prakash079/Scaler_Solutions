class Rectangle {
	public :
	    // Define properties here
		int l,b;
		
		// Define constructor here
		Rectangle (int x, int y){
			l=x;
			b=y;
		}
		
		int perimeter(){
			// Complete the function
			return (2*(l+b));
		}
		
		int area(){
			// Complete the function
			return l*b;
		}
};


   /* Rectangle a = new Rectangle(2, 3)  // Length = 2, Breadth = 3
	a.perimeter() // Should give 10
    a.area() // Should give 6
*/
